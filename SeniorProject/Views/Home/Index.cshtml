@model List<SeniorProject.Models.ImportedProduct>
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

@if (User.IsInRole("Admin") || User.IsInRole("RetailManager"))
{
    <div class="alert alert-info mt-4">
        <h3>Manager Tools</h3>

        <a class="btn btn-primary" asp-controller="RetailManager" asp-action="Upload">
            Go to Upload Portal
        </a>

        <a class="btn btn-secondary" asp-controller="RetailManagerMapping" asp-action="Index">
            Open Product Mapping Tool
        </a>
    </div>
}

<div class="row mb-4 mt-5">
    <div class="col-md-12">
        <div class="card p-3 shadow-sm">
            <h4 class="mb-3">Find Cheapest Products</h4>
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-2">
                        <label class="form-label">Search Product</label>
                        <input type="text" name="q" class="form-control" value="@ViewBag.Query" placeholder="e.g. Milk" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Category</label>
                        <select name="category" class="form-select">
                            <option value="">-- All Categories --</option>
                            @if (ViewBag.Categories != null)
                            {
                                foreach (var cat in (ViewBag.Categories as IEnumerable<string>))
                                {
                                    bool isSelected = !string.IsNullOrEmpty(Context.Request.Query["category"]) && Context.Request.Query["category"] == cat;
                                    if (isSelected)
                                    {
                                        <option value="@cat" selected>@cat</option>
                                    }
                                    else
                                    {
                                        <option value="@cat">@cat</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Town</label>
                        <select name="townId" class="form-select">
                            <option value="">-- All Towns --</option>
                            @if (ViewBag.Towns != null)
                            {
                                foreach (var t in (ViewBag.Towns as IEnumerable<SeniorProject.Models.Town>))
                                {
                                    bool isSelected = ViewBag.TownId != null && (int)ViewBag.TownId == t.Id;
                                    if (isSelected) 
                                    {
                                        <option value="@t.Id" selected>@t.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@t.Id">@t.Name</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Filter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Product</th>
                    <th>Chain</th>
                    <th>Town</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Promo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>
                            <strong>@p.Name</strong>
                        </td>
                        <td>@p.RetailChain?.Name</td>
                        <td>@p.Town?.Name</td>
                        <td>@p.Category</td>
                        <td>@p.Price.ToString("C")</td>
                        <td>
                            @if (p.PromoPrice.HasValue)
                            {
                                <span class="text-danger fw-bold">@p.PromoPrice.Value.ToString("C")</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-center mt-4">
        No products found. Try adjusting your filters or search query.
    </div>
}
